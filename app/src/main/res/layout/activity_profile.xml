<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <RelativeLayout
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/purple_500">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/purple_500">
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/back_img"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/notify"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        </RelativeLayout>



    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:id="@+id/card"
        android:layout_height="150dp"
        app:cardCornerRadius="90dp"
        app:cardElevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
             android:src="@drawable/user_profile"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/detls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/user">

            <ImageView
                android:id="@+id/img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_small"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/prof"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:layout_toRightOf="@+id/img"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AFFINITY"
                android:textSize="20dp"
                android:layout_below="@+id/prof"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/img"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/mail">

            <ImageView
                android:id="@+id/img_mail"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:layout_toRightOf="@+id/img_mail"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="example@gmail.com"
                android:textSize="20dp"
                android:layout_below="@+id/email"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/img_mail"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_below="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/phone">

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:src="@drawable/call"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:id="@+id/txt_nmber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:layout_toRightOf="@+id/phone_img"/>

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0123456789"
                android:textSize="20dp"
                android:layout_below="@+id/txt_nmber"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/phone_img"/>
        </RelativeLayout>



    </RelativeLayout>

    <TextView
        android:layout_below="@+id/detls"
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Change"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_rounded_blue"/>


    <TextView
        android:layout_below="@+id/btn_continue"
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Logout"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="40dp" />
    <!--<ImageView

        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:src="@drawable/cam" />-->

</RelativeLayout>